from enum import Enum

class StepName(str, Enum):
    SHAREPOINT_INGESTION = "sharepoint_ingestion"
    BLOB_UPLOAD = "blob_upload"
    TEXT_EXTRACTION = "text_extraction"
    VECTOR_INDEXING = "vector_indexing"

class StepStatus(str, Enum):
    PENDING = "PENDING"
    COMPLETED = "COMPLETED"
    FAILED = "FAILED"

class StepResult(str, Enum):
    SUCCESS = "SUCCESS"
    FAILED = "FAILED"

class IngestionStatus(str, Enum):
    INGESTION_COMPLETE = "sharepoint_ingestion_complete"
    NO_NEW_FILES = "no_new_files"
    ERROR = "error"
    PENDING = "pending"
